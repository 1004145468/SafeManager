<?xml version="1.0" encoding="utf-8"?>

<com.yl.safemanager.view.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/file_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/file_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/file_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="start"
                        android:maxWidth="220dp"
                        android:singleLine="true"
                        android:text="秦时明月.mp4"
                        android:textColor="@color/color1"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/file_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="(1024M)"
                        android:textColor="@color/grey"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/file_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:singleLine="true"
                    android:text="2017年6月25日16:56:07"
                    android:textColor="@color/color6"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/file_download"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/download"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/file_copy"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/copy"
            android:textColor="@color/color8"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/file_delete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="@color/color7"
            android:textSize="15sp" />

    </LinearLayout>

</com.yl.safemanager.view.SwipeItemLayout>